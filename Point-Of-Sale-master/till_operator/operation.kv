<FlatButton@ButtonBehavior+Label>:
    font_size: 14
    color: (1, 1, 1, 1)
    text_size: self.size
    halign: 'center'
    valign: 'middle'

<OperationWindow>:
    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    # Header Section
    BoxLayout:
        id: header
        size_hint_y: None
        height: 40
        canvas.before:
            Color:
                rgba: (0.16, 0.4, 0.64, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'Point Of Sale System'
            size_hint_x: .9
            bold: True
            color: (1, 1, 1, 1)
        FlatButton:
            id: loggedin_user
            text: 'root'
            font_size:'16sp'
            color: (1, 1, 1, 1)
            underline: True
            on_release: root.logout()

    # Current Item Section
    BoxLayout:
        id: current
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba: (0.2, 0.5, 0.8, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            text: 'Current Item'
            background_normal: ''
            background_color: (0.20, 0.48, 0.76, 1)
            size_hint_x: .4
        Button:
            id: cur_product
            text: 'Default Product'
            background_normal: ''
            background_color: (0.22, 0.55, 0.88, 1)
        Button:
            id: cur_price
            text: '0.00'
            background_normal: ''
            background_color: (0.24, 0.6, 0.96, 1)
            size_hint_x: .2

    # Product Details Section
    BoxLayout:
        padding: 10
        BoxLayout:
            id: product_details
            orientation: 'vertical'
            size_hint_x: .8
            spacing: 10

            # Product Labels
            BoxLayout:
                id: product_labels
                size_hint_y: None
                height: 40
                canvas.before:
                    Color:
                        rgba: (0.2, 0.5, 0.8, 1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                FlatButton:
                    text: 'Qty'
                    size_hint_x: .1
                    font_size: '16sp'
                FlatButton:
                    text: 'Product Code'
                    size_hint_x: .3
                    font_size: '16sp'
                FlatButton:
                    text: 'Disc'
                    size_hint_x: .1
                    font_size: '16sp'
                FlatButton:
                    text: 'Disc %'
                    size_hint_x: .1
                    font_size: '16sp'
                FlatButton:
                    text: 'VAT'
                    size_hint_x: .1
                    font_size: '16sp'
                FlatButton:
                    text: 'Price'
                    size_hint_x: .1
                    font_size: '16sp'
                FlatButton:
                    text: 'Product Total'
                    size_hint_x: .2
                    font_size: '16sp'

            # Product Inputs
            BoxLayout:
                id: product_inputs
                size_hint_y: None
                height: 40
                spacing: 5
                TextInput:
                    id: qty_inp
                    size_hint_x: .1
                    text: '1'
                    font_size: '16sp'
                TextInput:
                    id: code_inp
                    size_hint_x: .3
                    multiline: False
                    on_text_validate: root.update_purchases()
                    focus: True
                    font_size: '16sp'
                TextInput:
                    id: disc_inp
                    size_hint_x: .1
                    text: '0.00'
                    font_size: '16sp'
                TextInput:
                    id: disc_perc_inp
                    size_hint_x: .1
                    text: '0'
                    font_size: '16sp'
                TextInput:
                    id: vat_inp
                    size_hint_x: .1
                    text: '15%'
                    font_size: '16sp'
                TextInput:
                    id: price_inp
                    size_hint_x: .1
                    text: '0.00'
                    font_size: '16sp'
                TextInput:
                    id: total_inp
                    size_hint_x: .2
                    text: '0.00'
                    font_size: '16sp'

            # Add to Cart Section
            BoxLayout:
                id: add_to_cart
                orientation: 'vertical'

                # Cart Labels
                BoxLayout:
                    size_hint_y: None
                    height: 30
                    canvas.before:
                        Color:
                            rgba: (0.2, 0.5, 0.8, 1)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    Label:
                        text: 'Code'
                        size_hint_x: .2
                    Label:
                        text: 'Product Name'
                        size_hint_x: .3
                    Label:
                        text: 'Qty'
                        size_hint_x: .1
                    Label:
                        text: 'Disc'
                        size_hint_x: .1
                    Label:
                        text: 'Price'
                        size_hint_x: .1
                    Label:
                        text: 'Product Total'
                        size_hint_x: .2

                # Scroll View for Products
                ScrollView:
                    GridLayout:
                        id: products
                        cols: 1
                        size_hint_y: None
                        height: self.minimum_height

        # Preview Section
        BoxLayout:
            id: preview
            orientation: 'vertical'
            size_hint_x: .3
            padding: [10, 10]  

            TextInput:
                id: receipt_preview
                readonly: True
                text: 'Rooted Guru'
                bold: True
                halign: "center"
                font_name: 'RobotoMono-Regular'
                valign: "top"
                padding: [5, 5]
                font_size: '18sp' 

    #Payment and Transaction Section
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: .1
        height: 60
        padding: 10
        spacing: 20

        # Payment Method Dropdown
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: .4
            spacing: 5
            Label:
                text: 'Payment Method'
                font_size: '16sp'
                size_hint_y: None
                height: 20
            Spinner:
                id: payment_spinner
                text: 'Select Payment Method'
                values: ['Cash', 'Credit Card', 'Mobile Payment']
                size_hint_y:None
                height:40
                background_normal:''
                background_color: (0.16, 0.4, 0.64, 1)
                color: (1, 1, 1, 1)
                font_size: '16sp'
                on_text: root.select_payment_method(self.text)

        # Transaction Buttons
        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_x: .6
            Button:
                text: 'Complete Transaction'
                background_normal: ''
                background_color: (0.16, 0.4, 0.64, 1)
                on_release: root.complete_transaction()
            Button:
                text: 'Print Receipt'
                background_normal: ''
                background_color: (0.16, 0.4, 0.64, 1)
                on_release: root.print_receipt()


    # Footer Section
    BoxLayout:
        id: footer
        size_hint_y: None
        height: 30
        canvas.before:
            Color:
                rgba: (0.16, 0.4, 0.64, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'Software by Rooted Guru Company Limited'
            color: (1, 1, 1, 1)
            font_size: '15sp'
