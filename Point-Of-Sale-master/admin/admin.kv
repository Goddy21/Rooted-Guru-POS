#: import Window kivy.core.window.Window

<FlatButton@ButtonBehavior+Label>:
    text: 'default'

<AdminWindow>
    id: main_win
    orientation: 'vertical'

    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        id: top_nav
        size_hint_y: None
        height: 30
        canvas.before:
            Color:
                rgba: (0.16, 0.4, 0.64, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        FlatButton:
            id: file_trigger
            text: 'File'
            on_release: file_dropdown.open(self)  # Open dropdown on button release
            size_hint: (.1, None)
            height: 30
            font_size:'16sp'

        # Removed on_parent Widget
        DropDown:
            id: file_dropdown
            auto_dismiss: True  # Ensure dropdown closes when an option is selected
            Button:
                text: 'logout'
                size_hint_y: None
                height: 30
                on_release:
                    root.logout()
                    file_dropdown.dismiss()  # Close dropdown after logout
            Button:
                text: 'Quit'
                size_hint_y: None
                height: 30
                on_release:
                    Window.close()
                    file_dropdown.dismiss()  # Close dropdown after quit

        Label:
            text: 'Admin Dashboard'
            bold: True
            size_hint: (.9, None)
            height: 30

    BoxLayout:
        id: content_nav
        BoxLayout:
            id: nav_tabs
            size_hint_x:.2
            orientation: 'vertical'
            spacing: 3
            canvas.before:
                Color:
                    rgba: (0.2, 0.5, 0.8, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            ToggleButton:
                id: user_toggle
                text: 'Manage Users'
                size_hint_y: .1
                state: 'down'
                background_color: (0.20, 0.48, 0.76, 1)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)
            ToggleButton:
                id: products_toggle
                text: 'Manage Products'
                size_hint_y: .1
                background_color: (0.22, 0.55, 0.88, 1)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)
            ToggleButton:
                id: analysis_toggle
                text: 'Product Analysis'
                size_hint_y: .1
                background_color: (0.24, 0.6, 0.96, 1)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)
            Label:
                id: sp
                text: ''
                size_hint_y: .7
        BoxLayout:
            id: all_content
            size_hint_x: .8
            padding: (20, 10)
            ScreenManager:
                id: scrn_mngr
                Screen:
                    id: scrn_content
                    name:'scrn_content'
                    BoxLayout:
                        id: scrn_content
                        name: 'scrn_content'
                        BoxLayout:
                            orientation: 'vertical'
                            spacing: 10
                            BoxLayout:
                                id: scrn_contents
                            BoxLayout:
                                id: ops_fields
                                spacing: 10
                                size_hint_y: None
                                height: 35
                            BoxLayout:
                                id: ops_btns
                                spacing: 10
                                size_hint_y:None
                                height: 45
                                Button:
                                    id: crud_add
                                    text: 'Add User'
                                    background_normal:''
                                    background_color: (0.16, 0.4, 0.64, 1)
                                    on_release: root.add_user_fields()
                                Button:
                                    id: crud_update
                                    text: 'Update User'
                                    background_normal:''
                                    background_color: (0.16, 0.4, 0.64, 1)
                                    on_release: root.update_user_fields()
                                Button:
                                    id: crud_remove
                                    text: 'Remove User'
                                    background_normal:''
                                    background_color: (0.16, 0.4, 0.64, 1)
                                    on_release: root.remove_user_fields()
                Screen:
                    id: scrn_product_content
                    name:'scrn_product_content'
                    BoxLayout:
                        id: scrn_content
                        name: 'scrn_content'
                        BoxLayout:
                            orientation: 'vertical'
                            spacing: 10
                            BoxLayout:
                                id: scrn_product_contents
                            BoxLayout:
                                id: ops_fields_p
                                spacing: 10
                                size_hint_y: None
                                height: 35
                            BoxLayout:
                                id: ops_btns_p
                                spacing: 10
                                size_hint_y:None
                                height: 45
                                Button:
                                    id: crud_add_p
                                    text: 'Add Product'
                                    background_normal:''
                                    background_color: (0.16, 0.4, 0.64, 1)
                                    on_release: root.add_product_fields()
                                Button:
                                    id: crud_update_p
                                    text: 'Update Product'
                                    background_normal:''
                                    background_color: (0.16, 0.4, 0.64, 1)
                                    on_release: root.update_product_fields()
                                Button:
                                    id: crud_remove_p
                                    text: 'Remove Product'
                                    background_normal:''
                                    background_color: (0.16, 0.4, 0.64, 1)
                                    on_release: root.remove_product_fields()
                Screen:
                    id: scrn_analysis
                    name:'scrn_analysis'
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 10
                        BoxLayout:
                            # orientation: 'vertical'
                            size_hint_y:None
                            height: 45
                            Spinner:
                                id: target_product
                                background_normal:''
                                background_color: (0.12, 0.32, 0.52, 1)
                                text: 'Choose Product'
                            Button:
                                id: submit_analysis
                                text: 'View Stats'
                                size_hint_x: .3
                                background_normal:''
                                background_color: (0.12, 0.32, 0.52, 1)
                                #on_release: root.view_stats()
                        BoxLayout:
                            id: analysis_res

    BoxLayout:
        id: footer
        size_hint_y:None
        height: 30
        canvas.before:
            Color:
                rgba: (0.16, 0.4, 0.64, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'Software by Rooted Guru Company Limited'
            font_size: '15sp'
            color:(1,1,1,1)
