<FlatButton@ButtonBehavior+Label>:
    font_size: 16

<SigninWindow>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: (1, 1, 1, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        # ðŸŸ¦ Top Navigation Bar
        BoxLayout:
            size_hint_y: None
            height: 50
            pos_hint: {"top": 1}
            padding: 10, 0
            canvas.before:
                Color:
                    rgba: (0.16, 0.4, 0.64, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                text: "Poin of Sale Access Control"
                color: (1, 1, 1, 1)
                font_size: 20
                bold: True
                size_hint_x: 0.9
                text_size: self.size
                halign: 'left'
                valign: 'middle'

            FlatButton:
                text: "x"
                size_hint_x: 0.1
                color: (1, 1, 1, 1)

        # ðŸŸ¨ Centered Sign In Form
        BoxLayout:
            orientation: "vertical"
            size_hint: None, None
            size: 400, 420
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            spacing: 15
            padding: 20

            Label:
                text: "[b]Sign In[/b]"
                font_size: '24sp'
                markup:True
                color: (0.16, 0.4, 0.64, 1)
                size_hint_y: None
                height: 30
                text_size: self.size
                halign: 'center'
                valign: 'middle'

            Label:
                id: info
                text: ""
                markup: True
                size_hint_y: None
                height: 20

            TextInput:
                id: username_field
                hint_text: "Username"
                multiline: False
                size_hint_y: None
                height: 40
                on_text_validate: pwd_field.focus=True

            TextInput:
                id: pwd_field
                hint_text: "Password"
                multiline: False
                password: True
                size_hint_y: None
                height: 40
                on_text_validate: root.validate_user()

            Button:
                text: "Sign In"
                size_hint_y: None
                height: 40
                background_color: (0.16, 0.4, 0.64, 1)
                background_normal: ''
                on_release: root.validate_user()

            FlatButton:
                text: "[color=#2942A3FF]I don't have an account[/color]"
                markup: True
                size_hint_y: None
                height: 40
                font_size:'18sp'
                on_release: root.go_to_signup()

        # ðŸŸ¥ Footer
        BoxLayout:
            size_hint_y: None
            height: 30
            pos_hint: {"x": 0, "y": 0}
            canvas.before:
                Color:
                    rgba: (0.16, 0.4, 0.64, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: 'Software by Rooted Guru Company Limited'
                color: (1, 1, 1, 1)
                font_size: '15sp'
