<FlatButton@ButtonBehavior+Label>:
    font_size: 16

<SignupWindow>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: (1,1,1,1)
            Rectangle:
                size: self.size
                pos: self.pos

        # ðŸŸ¦ Top Nav Bar
        BoxLayout:
            size_hint_y: None
            height: 50
            pos_hint: {"top": 1}
            padding: 10, 0
            canvas.before:
                Color:
                    rgba: (0.16, 0.4, 0.64, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                text: "Point of Sale Access Control"
                bold: True
                color: (1, 1, 1, 1)
                font_size: 20
                size_hint_x: 0.9
                halign: 'left'
                valign: 'middle'
                text_size: self.size

            FlatButton:
                text: "x"
                size_hint_x: 0.1
                color: (1, 1, 1, 1)

        # ðŸŸ¨ Sign Up Form Centered
        BoxLayout:
            orientation: "vertical"
            size_hint: None, None
            size: 500, 550
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            spacing: 12
            padding: 20

            Label:
                text: "[b]Sign Up[/b]"
                font_size: '24sp'
                markup:True
                color: (0.16, 0.4, 0.64, 1)
                size_hint_y: None
                height: 30
                text_size: self.size
                halign: 'center'
                valign: 'middle'

            Label:
                id: info
                text: ''
                markup: True
                size_hint_y: None
                height: 20

            TextInput:
                id: first_name
                hint_text: "First Name"
                multiline: False
                on_text_validate: last_name.focus = True
                size_hint_y: None
                height: 40

            TextInput:
                id: last_name
                hint_text: "Last Name"
                multiline: False
                on_text_validate: username_field.focus = True
                size_hint_y: None
                height: 40

            TextInput:
                id: username_field
                hint_text: "Username"
                multiline: False
                on_text_validate: designation_field.focus = True
                size_hint_y: None
                height: 40

            TextInput:
                id: designation_field
                hint_text: "Designation (Operator/Administrator)"
                multiline: False
                on_text_validate: pwd_field.focus = True
                size_hint_y: None
                height: 40

            TextInput:
                id: pwd_field
                hint_text: "Password"
                multiline: False
                password: True
                on_text_validate: confirm_pwd_field.focus = True
                size_hint_y: None
                height: 40

            TextInput:
                id: confirm_pwd_field
                hint_text: "Confirm Password"
                multiline: False
                password: True
                on_text_validate: root.register_user()
                size_hint_y: None
                height: 40

            Button:
                text: "Sign Up"
                size_hint_y: None
                height: 40
                background_color: (0.16, 0.4, 0.64, 1)
                background_normal: ''
                on_release: root.register_user()

            FlatButton:
                text: "[color=#2942A3FF]I already have an account[/color]"
                markup: True
                size_hint_y: None
                height: 40
                font_size:'18sp'
                on_release: root.go_to_signin()

        # ðŸŸ¥ Footer
        BoxLayout:
            size_hint_y: None
            height: 30
            pos_hint: {"x": 0, "y": 0}
            canvas.before:
                Color:
                    rgba: (0.16, 0.4, 0.64, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: 'Software by Rooted Guru Company Limited'
                color: (1, 1, 1, 1)
                font_size: '15sp'
